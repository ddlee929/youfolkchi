tr:nth-of-type(odd) {
  background: #eee;
}

@media
only screen and (max-width: 760px),
(min-device-width: 768px) and (max-device-width: 1024px)  {

  table, thead, tbody, th, td, tr {
    display: block;
    font-size: 10px;
  }

  thead tr {
    position: absolute;
    top: -9999px;
    left: -9999px;
  }

  .gigs-column {
      border-bottom: 1px solid grey;
      padding-top: 5px;
      text-align: left;
  }

  .gig-table-headers {
    float: left;
  }

  .gigs-date{
      width: 70%;
  }

  .gigs-location {
      width: 70%;
  }

  .gigs-artists {
      width: 70%;
  }

  td {
    position: relative;
    padding-left: 30%;
    font-size: 10px;
    min-height: 20px;
  }

  td:before {
    display: none;
    position: absolute;
    top: 6px;
    left: 6px;
    width: 45%;
    padding-right: 10px;
    white-space: nowrap;
    font-size: 10px;
  }

  td:nth-of-type(1):before { content: "Date"; }
  td:nth-of-type(2):before { content: "Location"; }
  td:nth-of-type(3):before { content: "Artists"; }
}
