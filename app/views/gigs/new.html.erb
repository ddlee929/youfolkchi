<head>
  <%= stylesheet_link_tag    'gigs' %>
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Crimson+Text" rel="stylesheet">
</head>

<div id="new-heading-gigs">Create New Shows</div>

<div id="create-gigs">
  <%= form_for @gig do |f| %>
    <div class="gig-col">Date:</div><%= f.date_field :date, id: 'gig-date-field' %><br />
    <div class="gig-col">Location:</div><%= f.text_area :location %><br />
    <div class="gig-col">Artists:</div><%= f.text_area :artists %><br />
    <%= f.submit "Create" %>
  <% end %>
</div>
<br />
